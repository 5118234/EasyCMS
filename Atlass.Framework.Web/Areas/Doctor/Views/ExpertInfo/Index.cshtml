
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox ">
                <div id="toolbar" class="btn-group">

                </div>
                <div>
                    <table id="roleTable"></table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
    {
    <script>
        var $roleTable;
        $(function() {
            loadGrid();
        });

        function loadGrid() {
            $roleTable = $("#roleTable").bootstrapTable({
                url: '/doctor/expertinfo/GetData',
                toolbar: '#toolbar',
                pagination: true,
                height: $(window).height() - 50,
                pageSize: 15,
                pageList: [5, 10, 15, 20],
                showColumns: true,
                showRefresh: true,
                clickToSelect: true,
                sidePagination: "server",
                locale: "zh-CN",
                striped: true,
                columns: [
                    { field: 'ck', checkbox: true },
                    { field: 'expert_name', title: '专家名称', align: 'center' },
                    { field: 'head_url', title: '头像', align: 'center', formatter: function(v, r, i) {
                        return '<img  src="' + v + '" width="50" height="40"/>';
                    }
                    },
                    { field: 'type_name', title: '专家类型', align: 'center' },
                    { field: 'company_name', title: '单位名称', align: 'center' },
                    { field: 'position_name', title: '职位', align: 'center' },
                    { field: 'expert_title', title: '头衔', align: 'center' },
                    { field: 'work_year', title: '从业时长(年)', align: 'center' },
                    { field: 'expert_count', title: '咨询次数', align: 'center' },
                    { field: 'star_score', title: '评分', align: 'center' },
                    { field: 'show_sort', title: '排序', align: 'center' },
                    { field: 'id', title: '操作', align: 'center', formatter: renderOpt}
                ]

            });

            jutils.initToolBarRole('#toolbar');
        }

        //渲染操作
        function renderOpt(v, r, i) {
            var html = jutils.initToolBarRow(v);

            return html;
        }

        function add() {
            parent.$.altasTab.open({
                id: "zjtab",
                title: '专家信息',
                url: '/doctor/expertinfo/form/',
                close: function () {
                    $roleTable.bootstrapTable('refresh');
                }
            });
        }

        function edit(obj) {

            var id = $(obj).data('id');
            parent.$.altasTab.open({
                id: "zjtab",
                title: '专家信息',
                url: '/doctor/expertinfo/form/' + id,
                close: function () {
                    $roleTable.bootstrapTable('refresh');
                }
            });
        }

        function del(obj) {
            var id = $(obj).data('id');
            jutils.confirm('确认删除吗',
                function() {
                    jutils.ajaxGet('/doctor/expertinfo/DeleteById',
                        { id: id },
                        function() {
                            $roleTable.bootstrapTable('refresh');
                        });
                });
        }
    </script>


}

