
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox ">
                <div id="toolbar" class="btn-group">
                </div>
                <div>
                    <table id="roleTable"></table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
    {
    <script>
        var $roleTable;
        $(function () {

            loadGrid();
        });

        function loadGrid() {
            $roleTable = $("#roleTable").bootstrapTable({
                url: '/doctor/banner/GetList',
                toolbar: '#toolbar',
                pagination: true,
                height: $(window).height() - 50,
                pageSize: 15,
                pageList: [5, 10, 15, 20],
                showColumns: true,
                showRefresh: true,
                clickToSelect: true,
                sidePagination: "server",
                locale: "zh-CN",
                striped: true,
                columns: [
                    { field: 'ck', checkbox: true },
                    { field: 'banner_sort', title: '顺序', align: 'center' },
                    { field: 'banner_href', title: '外链', align: 'center' },
                    {field: 'banner_url', title: '图片', align: 'center', formatter: function (v, e, i) {
                        var html = '<img  src="' + v + '" width="50" height="50"/>';
                        return html;
                    }  },
                    { field: 'id', title: '操作', align: 'center', formatter: renderOpt}
                ]

            });

            jutils.initToolBarRole('#toolbar');
        }

        //渲染操作
        function renderOpt(v, r, i) {
            var html = jutils.initToolBarRow(v);

            return html;
        }

        function add() {
            jutils.dialogForm('添加图片',
                '/doctor/banner/index',
                { id: 0 },
                function (res) {
                    $roleTable.bootstrapTable('refresh');
                });
        }

        function edit(obj) {

            var id = $(obj).data('id');
            jutils.dialogForm('添加图片',
                '/doctor/banner/index',
                { id: id },
                function(res) {
                    $roleTable.bootstrapTable('refresh');
                });
        }

        function del(obj) {
            var id = $(obj).data('id');
            jutils.confirm('确认删除吗',
                function() {
                    jutils.ajaxGet('/doctor/banner/DeleteById',
                        { id: id },
                        function() {
                            $roleTable.bootstrapTable('refresh');
                        });
                });
        }
    </script>


}






