
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
    <link href="~/plugins/verUpload/asset/upload.css" rel="stylesheet" />
<div class="ibox">
    <div class="ibox-title">
        <h5>热门提问</h5>
    </div>
    <div class="ibox-content">
        <form class="form form-horizontal" id="myForm">
            <input type="hidden" id="id" name="id" value="@(ViewBag.Id)" />
            <div class="form-group">
                <label class="col-sm-3 control-label required">标题：</label>
                <div class="col-sm-4">
                    <input type="text" name="hot_title" id="hot_title" class="form-control" placeholder="" data-rule="required">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label required">超链接：</label>
                <div class="col-sm-4">
                    <input type="text" name="url" id="url" class="form-control" placeholder="" data-rule="required">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label required">置顶：</label>
                <div class="col-sm-4">
                    <div class="checkbox checkbox-success checkbox-inline">
                        <input type="checkbox" id="is_top" name="is_top" value="true">
                        <label for="is_top">置顶</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label required">点击量：</label>
                <div class="col-sm-4">
                    <input type="number" name="hit_count" id="hit_count" class="form-control" value="1" placeholder="" data-rule="required">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label required">图片：</label>
                <div class="col-sm-4">
                    <div class="cupload-upload-box" id="uploader">
                        <span class="cupload-upload-btn">+</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label required"></label>
                <div class="col-sm-8">
                    <input type="hidden" name="hot_image" id="hot_image" value="" />
                    <ul class="cupload-image-boxs" id="imgList">
                        @*<li class="cupload-image-box" style="position:relative;">
                            <img id="saleImage" class="cupload-image-preview" src="../images/noHead.png" onerror="this.src='../images/noHead.png'">
                            <div class="cupload-image-delete" onclick="deletImage()">
                                x
                            </div>
                        </li>*@
                    </ul>
                </div>
            </div>
            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-primary" type="submit">
                        保存
                    </button>
                    <button class="btn btn-white" type="button" onclick="cancel()">
                        返回
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
@section scripts{
    <script src="~/plugins/verUpload/verUpload.js"></script>
    <script>
        var images = [];
        $(function () {
            $('#myForm').validator({
                stopOnError: false,
                timely: 2,
                theme: "yellow_right",
                valid: function (form) {

                    if (images.length === 0) {
                        $('#hot_image').val('');
                    } else {
                        var imgs = images.join();
                        $('#hot_image').val(imgs);
                    }
                    jutils.ajaxPost('/BasicData/hotQuestion/Save', $(form).serialize(),
                        function (res) {
                            cancel();

                        });
                }
            });

            initUpload();
            loadData();
        })
        function loadData() {
            var id = $("#id").val();

            if (id !== '0') {

                jutils.ajaxGet('/BasicData/hotQuestion/GetModel', { id: id }, function (res) {
                    $('#myForm').initFormData(res.data.model);
                    var imagesData = res.data.images;
                    if (imagesData && imagesData.length > 0) {
                        for (var i = 0; i < imagesData.length; i++) {
                            initImage(imagesData[i]);
                        }
                    }
                });
            }
        }

        function initUpload() {
            new verUpload({
                files: "#uploader",
                name: "files",
                load_list: true,
                method: '/api/upload/Uploadimg',
                success: function (d) {
                    var res = JSON.parse(d);
                    if (res.status) {
                        initImage(res.data.url);
                    } else {
                        jutils.error("图片上传失败");
                    }
                },
                fail: function (d) {
                   // $('#sale_image').val('');
                    jutils.error("图片上传失败!");
                },
                size: 1024 * 4,
                ext: ['jpg', 'jpeg', 'png', 'gif']
            });

        }

        function initImage(imgUrl) {
            images.push(imgUrl);
            var imgHtml ='<li class="cupload-image-box" style="position:relative;">';
            imgHtml += '<img class="cupload-image-preview" src = "' + imgUrl+'" />';
            imgHtml += '<div class="cupload-image-delete" onclick="deletImage(this)" data-url="' + imgUrl+'">x</div>';
            imgHtml += '</li>';
            $('#imgList').append(imgHtml);
        }

        function deletImage(obj) {
            var url = $(obj).data('url');
            $imgli = $(obj).parent('li');
            jutils.confirm('确认删除图片吗?', function () {
                var imgIndex = images.indexOf(url);
                if (imgIndex>= 0) {
                    images.splice(imgIndex, 1);
                    $imgli.remove();
                }
            })
        }
        function cancel() {
            jutils.back();
        }
    </script>
}
