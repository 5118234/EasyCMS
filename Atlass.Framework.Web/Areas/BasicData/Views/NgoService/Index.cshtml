@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="ibox ">

    <div class="ibox-content">
        <div id="toolbar" class="btn-group">
        </div>
        <table id="roleTable"></table>
    </div>
</div>
@section scripts
    {
    <script>
        var $roleTable;
        $(function () {
            loadGrid();
        });

        function loadGrid() {
            $roleTable = $("#roleTable").bootstrapTable({
                url: '/BasicData/NgoService/GetData',
                toolbar: '#toolbar',
                pagination: true,
                height: $(window).height() - 50,
                pageSize: 15,
                pageList: [5, 10, 15, 20],
                showColumns: true,
                showRefresh: true,
                clickToSelect: true,
                sidePagination: "server",
                locale: "zh-CN",
                striped: true,
                columns: [
                    { field: 'ck', checkbox: true },
                    { field: 'service_title', title: '标题', align: 'center' },
                    { field: 'sort_num', title: '排序', align: 'center' },
                    { field: 'url', title: '链接地址', align: 'center' },
                    { field: 'insert_time', title: '创建时间', align: 'center' },
                    { field: 'id', title: '操作', align: 'center', formatter: renderOpt }
                ]

            });

            jutils.initToolBarRole('#toolbar');
        }

        //渲染操作
        function renderOpt(v, r, i) {
            var html = jutils.initToolBarRow(v);

            return html;
        }

        function add() {
            location.href = '/BasicData/NgoService/form?id=0';
            //jutils.dialog('热门提问', '/BasicData/HotQuestion/form/', { id: 0 }, null,
            //    function () {
            //        $roleTable.bootstrapTable('refresh');
            //    });
        }

        function edit(obj) {

            var id = $(obj).data('id');
            location.href = '/BasicData/NgoService/form?id=' + id;
            //jutils.dialog('热门提问', '/BasicData/HotQuestion/form', { id: id }, null,
            //    function () {
            //        $roleTable.bootstrapTable('refresh');
            //    });

        }

        function del(obj) {
            var id = $(obj).data('id');
            jutils.confirm('确认删除吗',
                function () {
                    jutils.ajaxGet('/BasicData/NgoService/DeleteById',
                        { ids: id },
                        function () {
                            $roleTable.bootstrapTable('refresh');
                        });
                });
        }
    </script>


}


