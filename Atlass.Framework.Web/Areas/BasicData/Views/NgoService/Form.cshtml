
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<link href="~/plugins/verUpload/asset/upload.css" rel="stylesheet" />
<div class="ibox">
    <div class="ibox-title">
        <h5>热门提问</h5>
    </div>
    <div class="ibox-content">
        <form class="form form-horizontal" id="myForm">
            <input type="hidden" id="id" name="id" value="@(ViewBag.Id)" />
            <div class="form-group">
                <label class="col-sm-3 control-label required">标题：</label>
                <div class="col-sm-4">
                    <input type="text" name="service_title" id="service_title" class="form-control" placeholder="" data-rule="required">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label required">超链接：</label>
                <div class="col-sm-4">
                    <input type="text" name="url" id="url" class="form-control" placeholder="" data-rule="required">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label required">排序：</label>
                <div class="col-sm-4">
                    <input type="number" name="sort_num" id="sort_num" class="form-control" value="1" placeholder="" data-rule="required">
                </div>
            </div>

            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-primary" type="submit">
                        保存
                    </button>
                    <button class="btn btn-white" type="button" onclick="cancel()">
                        返回
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
@section scripts{
    <script src="~/plugins/verUpload/verUpload.js"></script>
    <script>
        var images = [];
        $(function () {
            $('#myForm').validator({
                stopOnError: false,
                timely: 2,
                theme: "yellow_right",
                valid: function (form) {

                    jutils.ajaxPost('/BasicData/NgoService/Save', $(form).serialize(),
                        function (res) {
                            cancel();

                        });
                }
            });
            loadData();
        })
        function loadData() {
            var id = $("#id").val();
            if (id !== '0') {

                jutils.ajaxGet('/BasicData/NgoService/GetModel', { id: id }, function (res) {
                    $('#myForm').initFormData(res.data.model);

                });
            }
        }



        function cancel() {
            jutils.back();
        }
    </script>
}


